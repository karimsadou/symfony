<!-- si slider et si >= 2 img -->
<div class="container">
<div class="py-5">
<div id="sliderGaleriePhoto" class="carousel slide" data-ride="carousel">
    <!-- incicateurs-->
    {% set i = 0 %}
    {% set nbimg = gallery.images|length %}
    <ol class="carousel-indicators">
        {% for i in 0..(nbimg - 1) %}
            {% if i == 0 %}
                <li data-target="#sliderGaleriePhoto" data-slide-to="{{ i }}" class="active"></li>
            {% else %}
                <li data-target="#sliderGaleriePhoto" data-slide-to="{{ i }}"></li>
            {% endif %}
        {% endfor %}
    </ol>
    <!--images-->
    <div class="carousel-inner sliderGaleryPhoto">
        <!--slide active-->
        {% for image in gallery.images %}
            {% if loop.first %}
                <div class="carousel-item active bg-overlay-black" style="background-image: url('{{ asset(webPath ~ 'images/' ~ image.image.image) }}');">
            {% else %}
                    <div class="carousel-item bg-overlay-black" style="background-image: url('{{ asset(webPath ~ 'images/' ~ image.image.image) }}');">
            {% endif %}

                <!--si titre slide-->
                <div class="titleSlide">
                    <h2>{{ image.caption }}</h2>
                </div>
            </div>
            <a class="carousel-control-prev" href="#sliderGaleriePhoto" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#sliderGaleriePhoto" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
            </a>
        {% endfor %}
    </div>
</div>
</div>
</div>